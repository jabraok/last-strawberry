{{#ui/dd-card
    colorScheme=colorScheme
    isSelected=isSelected
    as |card|}}
{{card.title-bar
          title=location.code
          subTitle=company.name
          index=index
          actionIcon="clear"
          action=(if (not model.isOpen) (action "removeRouteVisit"))}}

{{card.body
          content=location.name
          infoIcons=infoIcons}}
{{/ui/dd-card}}