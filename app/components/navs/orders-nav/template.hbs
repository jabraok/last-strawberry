<div class="deliveryDate row">
  {{ui/date-picker
    date=deliveryDate
    onSelected=onDateSelected
    format="ddd MM-DD-YYYY"
  }}

  {{#ui/popup-menu}}
    {{#if hasStubAction}}
      {{ui/icon-button
        class="stubOrders"
        flat=true
        label="Stub Orders"
        type="add"
        click=stubOrders
      }}
    {{/if}}

    {{ui/icon-button
      class="createOrder"
      flat=true
      label="New Order"
      type="add"
      click=onRequestNewOrder
    }}

    {{#if hasDuplicateAction}}
      {{ui/icon-button
        class="duplicateOrders"
        flat=true
        label="Duplicate Orders"
        type="content_copy"
        disabled=(not hasOrders)
        click=onRequestDuplicateOrders
      }}
    {{/if}}

  {{/ui/popup-menu}}
</div>

{{navs/orders-nav/filter-options
  includePublished=includePublished
  includeUnpublished=includeUnpublished
  query=companyQuery
  items=items
  selectedItems=selectedItems
  itemSelected=updateIncludedItems
}}

{{lists/grouped-list
    highlightedItem=currentSelectedOrder
    itemClicked=onOrderSelected
    model=groupedOrders
    class="groupedList"
}}
